<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.gummyfish.appuntes3.PopupListCard">

        <ImageView
            android:id="@+id/popup_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="imagePreview"
            android:paddingBottom="16dp"
            android:src="@drawable/images" />

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_image"
            android:layout_centerHorizontal="true"
            android:paddingBottom="16dp"
            android:text="Nombre de los apuntes"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/popup_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_title"
            android:padding="16dp"
            android:text="Esta es la descripciÃ³n. Sadnsdo sdoadsno sadodon sdosdo sdosdids  wieoe qpqdoc  asdicow  sdocow  odci"
            android:textSize="13sp" />

        <Button
            android:id="@+id/buy_apuntes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent"
            android:onClick="buyApuntes"
            android:padding="16dp"
            android:text="15 puntos"
            android:textColor="@color/colorTextIcons"/>


    </RelativeLayout>

</LinearLayout>